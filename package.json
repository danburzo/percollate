{
	"name": "percollate",
	"version": "0.5.0",
	"description": "A command-line tool to grab web pages as PDF",
	"main": "src/index.js",
	"repository": "danburzo/percollate",
	"author": "Dan Burzo <danburzo@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"@mozilla/readability": "github:danburzo/readability#npm",
		"archiver": "^5.0.0",
		"css": "^3.0.0",
		"got": "^11.5.1",
		"jsdom": "^16.3.0",
		"mimetype": "^0.0.8",
		"nunjucks": "^3.2.2",
		"opsh": "^0.1.0",
		"puppeteer": "^5.2.1",
		"slugify": "^1.4.4",
		"srcset": "^3.0.0",
		"tmp": "^0.2.1"
	},
	"bin": {
		"percollate": "./cli.js"
	},
	"engines": {
		"node": ">= 8.6.0"
	},
	"devDependencies": {
		"epubchecker": "^4.2.2",
		"eslint": "^7.5.0",
		"husky": "^4.2.5",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"tape": "^5.0.1"
	},
	"scripts": {
		"test": "tape test/**/*.test.js",
		"lint": "eslint {src,test}/**/*.js *.js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged",
			"post-commit": "yarn lint"
		}
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 4,
		"jsxBracketSameLine": false,
		"arrowParens": "avoid",
		"printWidth": 80
	},
	"keywords": [
		"puppeteer",
		"cli",
		"pdf",
		"readability",
		"epub",
		"html"
	]
}
